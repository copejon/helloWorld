# Source this file into ~/.bash_profile
# Anything I want to remain consistent between machines goes here.

alias ls='ls -Fh --group-directories-first --color=auto'
alias ll='ls -l'
alias kc='kubectl'


#ssh-find-agent - use the same agent across sessions
if [ -z $HOME/.ssh-find-agent/ssh-find-agent.sh ]; then
	source $HOME/.ssh-find-agent/ssh-find-agent.sh
	ssh-find-agent -a
fi
if [ -z "$SSH_AUTH_SOCK" ]; then
	eval $(ssh-agent) > /dev/null
	ssh-add -l >/dev/null || alias ssh='ssh-add -l >/dev/null || ssh-add && unalias ssh; ssh'
fi


DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
# lazy functions to start/down gce||gke clusters
source $DIR/k8s-scripts/cluster-do

# custom bash prompt includeing PS1
source $DIR/bash_prompt
